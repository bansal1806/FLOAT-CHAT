# Environment Variables Example
# Copy this file to .env.local and update the values

# API Configuration
NEXT_PUBLIC_API_URL=/api/ocean-data
NEXT_PUBLIC_ARGO_URL=/api/ocean-data/argo
NEXT_PUBLIC_INCOIS_URL=/api/ocean-data/incois

# Real-time Data Update Intervals (in milliseconds)
NEXT_PUBLIC_ARGO_INTERVAL=300000  # 5 minutes
NEXT_PUBLIC_INCOIS_INTERVAL=60000 # 1 minute

# Feature Flags
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_AR=true
NEXT_PUBLIC_ENABLE_3D=true
NEXT_PUBLIC_ENABLE_PREDICTIONS=true
NEXT_PUBLIC_AUTO_START=true

# Logging Configuration
NEXT_PUBLIC_ENABLE_LOGGING=true
NEXT_PUBLIC_LOG_LEVEL=info
# NEXT_PUBLIC_LOG_ENDPOINT=https://your-logging-service.com/api/logs

# Error Tracking (Optional - for future integration)
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
# NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# Analytics (Optional - for future integration)
# NEXT_PUBLIC_GA_ID=your-google-analytics-id
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
